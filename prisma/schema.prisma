// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // o el proveedor que est√©s utilizando
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String
  area     String
}

model Client {
  id              Int      @id @default(autoincrement())
  nombre          String
  dni             String   @unique
  edad            Int
  fechaNacimiento DateTime
  direccion       String
  localidad       String
  telefono        String
  email           String
  obraSocial      String
  observaciones   String?
}
